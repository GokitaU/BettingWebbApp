@model IEnumerable<BettingWebbApp.Domain.Entities.Betting>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hello Admin, Welcome!!</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <div>All Available Odds</div>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Name</th>
                <th class="text-right">Amount</th>
                <th class="text-right">Odd</th>
                <th class="text-right">Description</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var item in Model)
            {
            <tr>
                <td class="text-right">@item.BettingId</td>
                <td>
                    @Html.ActionLink(item.Name, "Edit", new { item.BettingId })
                </td>
                <td class="text-right">@item.Amount.ToString("c")</td>
                <td class="text-right">@item.Odd</td>
                <td class="text-right">@item.Description</td>

                <td class="text-center">
                    @using (Html.BeginForm("Delete", "Admin"))
                    {
                        @Html.Hidden("BettingId", item.BettingId)
                        <input type="submit"
                               class="btn btn-default btn-xs"
                               value="Delete" />
                    }
                </td>
            </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add a New Odd", "Create", null,
        new{ @class="btn btn-default"})
    </div>
</div>